<div class="form-container" style=" max-width: 400px; margin: 0 auto; padding: 30px; border: 1px solid #ccc; border-radius: 5px; background-color: #f2e5bd;">

    <h3 style="font-size: 28px; color: #333; text-align: center; margin-bottom: 20px;">Edit Customer</h3>
    {{#if msg}}
    <div class="alert" style="padding: 10px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; background-color: #f2dede; color: #a94442;">{{msg}}</div>
    {{/if}}
    {{#each rows}}
    <form method="post" action="/editCustomer/{{this.ID}}">
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="name" style="display: block; margin-bottom: 5px; font-size: 18px;">Name</label>
            <input type="text" name="name" value="{{this.NAME}}" style="width: 95%; padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="email" style="display: block; margin-bottom: 5px; font-size: 18px;">Email</label>
            <input type="email" name="email" value="{{this.EMAIL}}" style="width: 95%; padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="phone" style="display: block; margin-bottom: 5px; font-size: 18px;">Phone</label>
            <input type="tel" name="phone" value="{{this.PHONE}}" style="width: 95%; padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="address" style="display: block; margin-bottom: 5px; font-size: 18px;">Address</label>
            <input type="text" name="address" value="{{this.ADDRESS}}" style="width: 95%; padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;">
        </div>
        <div class="form-group" style="margin-bottom: 15px;">
            <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; text-decoration: none; display: inline-block;">Save</button>
            <a href="/" class="btn-back" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; text-decoration: none; display: inline-block;">Back</a>
        </div>
    </form>
    {{/each}}
</div>
